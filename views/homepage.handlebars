{{#each postsArr }}

    <article class="post">
      <div class="title">
        <a href="/dashboard/">
          <h2>{{post_title}}</h2>
        </a>
        <span>Posted by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/posts/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a></span>
      </div>
      <div class="content">
        <p>{{post_content}}</p>
      </div>
    </article>

{{/each}}



