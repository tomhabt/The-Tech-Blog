{{#if postsArr}}
{{#each postsArr }}
    <article class="post">
      <div class="title">
        <a href="/dashboard/">
          <h2>{{post_title}}</h2>
        </a>
        <span>Posted by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/posts/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a></span>
      </div>
      <div class="content">
        <p>{{post_content}}</p>
      </div>
    </article>

{{/each}}
{{else }}
<h2 class="title"> Welcome to our site. There are no previous blogs & be the first to post one. </h2>
{{/if}}



