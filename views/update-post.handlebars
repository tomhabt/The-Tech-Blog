

<article>
  <form class="edit-form">
    <div>
    <h2 class="title">Edit Post</h2>
    </div>
    <div class="form-content">
      <label for="post-title" id="post-label">Title</label><br>
      <input name="post-title" type="text" id="post-title-input-label" value="{{post.post_title}}" />  
    </div>
    <div class="form-content">
      <label for="content-area" id="post-label">Content</label><br>
      <textarea class="content-body" name="content-area" id="post-content-input-label">{{post.post_content}}</textarea>
    </div>
    <button class="update-post-btn" >Update Post</button>
    <button class="delete-post-btn" >Delete Post</button>
  </form>
</article>


<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>


